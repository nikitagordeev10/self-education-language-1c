// Переворот строки

Функция РазвернутьСтроку(Строка)
    ДлинаСтроки = СтрДлина(Строка);
    Результат = "";

    // Индексы для разворота
    Левый = 1;
    Правый = ДлинаСтроки;

    // Массив символов для сборки результата
    МассивСимволов = Новый Массив;

    Пока Левый <= Правый Цикл
        // Добавляем символы в обратном порядке
        МассивСимволов.Добавить(Сред(Строка, Правый, 1));
        Правый = Правый - 1;
    КонецЦикла;

    // Соединяем символы в строку
    ВыходнаяСтрока = СтрСоединить(МассивСимволов, "");
    Возврат ВыходнаяСтрока;
КонецФункции

Процедура ПриНачалеРаботыСистемы()
    // Исходная строка
    Строка = "Привет, мир!";

    // Разворачиваем строку
    РазвернутаяСтрока = РазвернутьСтроку(Строка);

    // Выводим результат
    Сообщить(РазвернутаяСтрока);
КонецПроцедуры

    Массив1.Добавить(1);
    Массив1.Добавить(2);
    Массив1.Добавить(3);
    Массив1.Добавить(0); // Заполнители для слияния
    Массив1.Добавить(0);
    Массив1.Добавить(0);

    Массив2 = Новый Массив;
    Массив2.Добавить(2);
    Массив2.Добавить(5);
    Массив2.Добавить(6);

    СлияниеМассивов(Массив1, 3, Массив2, 3); // Результат: [1, 2, 3, 5, 5, 6]

    // Пример 2
